
public class PigLatin {

	public static void main(String[] args) {

	}

	public static String translateWord(String pigLatin) {
		pigLatin = pigLatin.toLowerCase();	
		String addWay = "way";
		
		if (pigLatin.startsWith(pigLatin, 'a')) {
			pigLatin += addWay;
		}
		System.out.println(pigLatin);
		return pigLatin;
	}
	
	
}
